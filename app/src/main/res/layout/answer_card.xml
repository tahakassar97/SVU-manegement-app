<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/min"
    app:cardCornerRadius="@dimen/min">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/min">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answerTitleTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textSize="@dimen/large" />

            <ImageView
                android:id="@+id/editIV"
                android:layout_marginRight="@dimen/min"
                android:layout_width="@dimen/x_large"
                android:layout_height="@dimen/x_large"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/deleteIV"
                android:layout_width="@dimen/x_large"
                android:layout_height="@dimen/x_large"
                android:src="@drawable/ic_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/answerStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="@dimen/large" />

    </LinearLayout>

</androidx.cardview.widget.CardView>