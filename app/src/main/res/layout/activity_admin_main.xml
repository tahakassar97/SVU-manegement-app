<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".AdminMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoutIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/xx_large"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_logout" />

                <ImageView
                    android:id="@+id/logoIV"
                    android:layout_width="@dimen/xxx_large"
                    android:layout_height="@dimen/xxx_large"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/settingsIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/xx_large"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_settings" />

            </LinearLayout>

            <TextView
                android:id="@+id/testsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large"
                android:text="@string/manage_tests"
                android:textAlignment="center"
                android:textSize="@dimen/large"
                tools:ignore="SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/testsTypesRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/min" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min"
                android:text="@string/exams"
                android:textAlignment="center"
                android:textSize="@dimen/large"
                tools:ignore="SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/examsRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/mid" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>